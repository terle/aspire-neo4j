<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- NuGet Package Metadata -->
		<PackageId>NorthernNerds.Aspire.Hosting.Neo4j</PackageId>
		<Version>3.0.0</Version>
		<Authors>terle,Northern Nerds</Authors>
		<Company>Northern Nerds</Company>
		<Description>An unofficial .NET Aspire hosting integration for Neo4j that provides container management and resource configuration. Part of the NorthernNerds.Aspire.Neo4j suite for seamless Neo4j integration in Aspire applications.</Description>
		<PackageTags>aspire;neo4j;dotnet-aspire;aspire-integration;graphdb;nosql;database;hosting;container;northern-nerds</PackageTags>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<LicenseUrl>https://choosealicense.com/licenses/mit/</LicenseUrl>

		<!-- Source Link -->
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<!-- Repository Info -->
		<RepositoryUrl>https://github.com/terle/aspire-neo4j</RepositoryUrl>
		<RepositoryType>git</RepositoryType>

		<!-- Additional Metadata -->
		<PackageProjectUrl>https://github.com/terle/aspire-neo4j</PackageProjectUrl>
		<PackageIcon>neo4j-icon.png</PackageIcon>
		<Copyright>Copyright © Northern Nerds 2026</Copyright>
		<Title>Neo4j Hosting Integration for .NET Aspire</Title>

		<!-- Package Generation -->
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>

		<!--Release Notes-->
		<PackageReleaseNotes>
			3.0.0 (since v2.0.0)
			- Upgraded to .NET 10 and .NET Aspire 13.1
			- Enhanced AddNeo4j hosting integration ([ResourceName], nullable ports, improved NEO4J_AUTH handling, endpoint refactor)
			- Example updated to wait for Neo4j readiness
		</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\assets\neo4j-icon.png" Pack="true" PackagePath="\" />
		<None Include="README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Aspire.Hosting" Version="13.1.0" />
	</ItemGroup>

</Project>
